<h1>Posts</h1>

<% @posts.each do |post| %>
  <h3><%= post.title %></h3>
  <br>
  <p><%= post.post %></p>
  <p>Created at <%= post.created_at %></p>
  <% if post.created_at != post.updated_at %>
    <p>Updated at <%= post.updated_at %></p>
  <% end %>
  
  <%=  link_to "Edit", edit_blog_url(post)%>
  <br>
  <br>
<% end %>  